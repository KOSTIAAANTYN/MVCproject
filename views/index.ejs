<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cinema Collection</title>
</head>
<body>
  <h1>Cinema Collection</h1>
  
  <form action="/add" method="POST">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" required><br>
    <label for="director">Director:</label>
    <input type="text" id="director" name="director" required><br>
    <label for="rating">Rating:</label>
    <input type="text" id="rating" name="rating" required><br>
    <button type="submit">Add Movie</button>
  </form>
  
  <h2>Movie Collection:</h2>
  <ul>
    <% movies.forEach(function(movie, index) { %>
      <li>
        <%= movie.title %> - <%= movie.director %> (Rating: <%= movie.rating %>)
        <% if (movie.watched) { %>
          <span style="color: green;">(Watched)</span>
        <% } else { %>
          <form action="/watched/<%= index %>" method="POST" style="display: inline;">
            <button type="submit">Mark as Watched</button>
          </form>
        <% } %>
        <br>
        <% if (movie.review) { %>
          <p><strong>Review:</strong> <%= movie.review %></p>
        <% } else { %>
          <form action="/review/<%= index %>" method="POST">
            <label for="review">Review:</label><br>
            <textarea id="review" name="review" rows="4" cols="50"></textarea><br>
            <button type="submit">Add Review</button>
          </form>
        <% } %>
      </li>
    <% }); %>
  </ul>
</body>
</html>
