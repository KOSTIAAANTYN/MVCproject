<h1>Edit Movie</h1>
<form action="/edit/<%= index %>" method="POST">
  <label for="title">Title:</label>
  <input type="text" id="title" name="title" value="<%= movie.title %>" required><br>
  <label for="director">Director:</label>
  <input type="text" id="director" name="director" value="<%= movie.director %>" required><br>
  <label for="rating">Rating:</label>
  <input type="text" id="rating" name="rating" value="<%= movie.rating %>" required><br>
  <label for="review">Review:</label>
  <textarea id="review" name="review" rows="4" cols="50"><%= movie.review %></textarea><br>
  <button type="submit">Save Changes</button>
</form>
